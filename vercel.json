{
  "version": 2,
  "projects": [
    {
      "src": "./frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build" // Adjust if needed, "build" is default for create-react-app
      }
    },
    {
      "src": "./backend",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/$1" }, 
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
